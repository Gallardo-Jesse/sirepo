---
# -*-yaml-*-
uwsgi:
  socket: {{ ip_address }}:{{ port }}
  master: true
  processes: {{ processes }}
  threads: {{ threads }}
  wsgi-file: {{ uwsgi_py }}
  callable: app
  chdir = {{ run_dir }}
  die-on-term: true
  stats: {{ run_dir }}/sock
  pidfile: {{ run_dir }}/pid
  logto = {{ run_dir }}/uwsgi.log
