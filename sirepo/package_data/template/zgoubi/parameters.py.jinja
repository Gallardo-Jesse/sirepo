
{% if bunch_spntrk == '1' %}
line.add(core.FAKE_ELEM("""
'SPNTRK'
4.1
{{ bunch_S_X }} {{ bunch_S_Y }} {{ bunch_S_Z }}
"""))
{% endif %}

{{ beamlineElements -}}
line.add(core.FAKE_ELEM("""
'FAISTORE'
zgoubi.fai
{{ simulationSettings_ip }}
"""))
line.add(core.REBELOTE(K=99, NPASS={{ simulationSettings_npass - 1 }}))
line.add(core.END())

with open('zgoubi.dat', 'w') as f:
    f.write(line.output())
